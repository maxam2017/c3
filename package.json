{
  "name": "@maxam2017/c3",
  "module": "index.ts",
  "type": "module",
  "bin": "dist/index.js",
  "scripts": {
    "build": "bun build index.ts --outdir=./dist --target=bun",
    "prepublishOnly": "bun run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@types/bun": "latest",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": ["main"]
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": ["biome lint --apply --no-errors-on-unmatched"],
    "*": ["biome check --no-errors-on-unmatched --files-ignore-unknown=true"]
  }
}
